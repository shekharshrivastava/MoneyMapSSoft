<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="com.example.shasha.electrokart.Ui.AppSettingActivity">
    <ImageView
        android:layout_margin="5dp"
        android:src="@drawable/icon_cat_shopping"
        android:layout_gravity="center"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:textSize="20dp"
        android:id="@+id/spendPaidTo"
        android:text="Bigg Bazaar"
        android:textStyle="bold"
        android:textColor="#18497F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:textColor="#0e2f44"
            android:textSize="20dp"
            android:id="@+id/amountPaid"
            android:text="Rs 200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_weight="0.5"
            android:textSize="20dp"
            android:id="@+id/datePaid"
            android:text="23-Aug-2016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>